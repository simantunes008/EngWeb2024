extends layout

block content
  h.modal(id="display")
  .w3-card-4 
    header.w3-indigo 
      h1 File Upload 
    form.w3-container(action="/files" method="POST" enctype="multipart/form-data")
      label.w3-text-teal
        b Select file
      input.w3-input.w3-border.w3-light-grey(type="file" name="myFile") 
      input.w3-btn.w3-blue-grey(type="submit" value="Send")


  .w3-card-4 
    header.w3-indigo 
      h2 File List 
    .w3-container 
      table.w3-table-all 
        tr 
          th Date 
          th File 
          th Size 
          th Type

          each f in files 
            tr(onclick='showImage(\"' + f.name + '\", \"' + f.MIMEType + '\")')
              td= f.date
              td= f.name
              td= f.size 
              td= f.MIMEType 

  footer.w3-container.w3-indigo 
    address Generated by upload-single::EngWeb2024 em #{d} 