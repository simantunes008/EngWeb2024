extends layout

block content
  .w3-container.w3-blue
    .w3-card-4.w3-margin.w3-white.w3-round
      .w3-container.w3-padding

        .w3-container
          a.w3-button.w3-green.w3-round(href="/registo") + Adicionar

        .w3-container.w3-padding.w3-white
          h1.w3-center.w3-padding-16 Lista de Ruas
          table.w3-table-all.w3-hoverable
            thead
              tr.w3-light-gray
                th ID
                th Nome
                th Detalhes
            tbody
              each rua in lista
                tr
                  td= rua._id
                  td= rua.nome
                  td
                    a(href=`/${rua._id}`) Ver Detalhes
