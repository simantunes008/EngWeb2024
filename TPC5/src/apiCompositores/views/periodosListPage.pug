extends layout

block content
    .w3-card-4
        header.w3-container.w3-brown
            h1
                span Lista de Períodos
                a.w3-btn.w3-round.w3-white(href="/periodos/registo") +
        
        div.w3-container
            table.w3-table-all
                tr
                    th ID
                    th Nome
                    th Ações
                each periodo in lPeriodos
                    tr
                        td= periodo.id
                        td
                            a(href="/periodos/" + periodo.id)= periodo.nome
                        td
                            span [ 
                            a(href="/periodos/edit/" + periodo.id) Edit
                            span ] 
                            span [
                            a(href="/periodos/delete/" + periodo.id) Delete
                            span ]
        
        footer.w3-container.w3-brown
            h5 Gerado por EngWeb2024 em #{date} - [
                a(href="/") Return
                span ]
