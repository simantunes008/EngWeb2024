extends layout

block content
    .w3-card-4
        header.w3-container.w3-brown
            h1
                span Lista de Compositores 
                a.w3-btn.w3-round.w3-white(href="/compositores/registo") +

        div.w3-container
            table.w3-table-all
                tr
                    th ID
                    th Nome
                    th Ações
                each compositor in lCompositores
                    tr 
                        td= compositor.id 
                        td 
                            a(href="/compositores/" + compositor.id)= compositor.nome
                        td 
                            span [
                            a(href="/compositores/edit/" + compositor.id) Edit
                            span ]
                            span [
                            a(href="/compositores/delete/" + compositor.id) Delete
                            span ]
                            
        footer.w3-container.w3-brown
            h5 Gerado por EngWeb2024 em #{date} - [
                a(href="/") Return
                span ]